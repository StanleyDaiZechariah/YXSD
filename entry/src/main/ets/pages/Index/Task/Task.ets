@Entry
@Component
struct Task {
  @State message: string = 'Task';

  build() {
    RelativeContainer() {
      Text(this.message)
        .id('TaskHelloWorld')
        .fontSize(50)
        .fontWeight(FontWeight.Bold)
        .alignRules({
          center: { anchor: '__container__', align: VerticalAlign.Center },
          middle: { anchor: '__container__', align: HorizontalAlign.Center }
        })
    }
    .height('100%')
    .width('100%')
  }
}

export default Task